<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Login to Your Account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-600" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Log in", class: "w-full bg-teal text-white py-2 px-4 rounded-lg" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-indigo-600 hover:underline" %>
    </div>

    <div class="text-center mt-2">
      <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-indigo-600 hover:underline" %>
    </div>
  </div>
</div>
